/* 轮播图部分样式 */
swiper{
 /* background-color:#333366; */
 background:linear-gradient(to bottom,#222,#fff);
}
swiper image{
  /* width:95%; */
  width:715rpx;
  height:300rpx;
  margin-left:18rpx;
  border-radius:20rpx;
}

/* 快捷菜单 */
.list{
  display: flex;
  justify-content: space-around;
  margin-top:40rpx;
}
.list-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size:26rpx;
  color:#888;
}
.list-item image{
  width:110rpx;
  height:110rpx;
}

/* 热播好剧 */
.big{
  margin-top:50rpx;
}
.rb{
  font-weight: 700;
  margin-left:30rpx;
  margin-bottom:20rpx;
}
.box{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}.box-item{
  display: flex;
  flex-direction: column;

}
.box-item>image{
  width:350rpx;
  height:200rpx;
  border-radius:10rpx;
}
.title{
  margin-top:10rpx;
  font-size:28rpx;
  font-weight:500;
}
.desc{
  margin-top:7rpx;
  margin-bottom:30rpx;
  font-size:24rpx;
  color:#ccc;

}