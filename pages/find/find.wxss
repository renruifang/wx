page{
  background-color:#111;
  color:#fff;
}
/* 猜你喜欢 */
.like{
  margin-top:5rpx;
  font-weight:700;
  margin-left:20rpx;
}
.box{
  margin-top:30rpx;
  display:flex;
  flex-direction:column;
}
.box>image{
  width:100%;
  height:350rpx;
}
.list{
  display:flex;
  justify-content:space-between;
  margin-top:20rpx;
  margin-bottom:30rpx;
}
.list-item>image{
  width:180rpx;
  height:260rpx;
  border-radius:10rpx;
}
.list-item{
  display:flex;
  flex-direction:column;
}
/* 调整字体 */
.title{
  font-size:26rpx;
  margin-top:10rpx;
}
.desc{
  font-size:20rpx;
  color:#ccc;
  margin-top:7rpx;
}