/* 轮播图部分样式 */
swiper{
 /* background-color:#333366; */
 background:linear-gradient(to bottom,#333366,#fff);
}
swiper image{
  /* width:95%; */
  width:715rpx;
  height:300rpx;
  margin-left:18rpx;
  border-radius:20rpx;
}

/* 剧集部分 */
.list-item{
  width:95%;
  /* border:2rpx solid #000; */
  margin:0 auto;
  display:flex;
  flex-direction:column;
}
  /*1. 标题部分 */
  .title{
    display:flex;
    justify-content:space-between;
    font-size:30rpx;
    color:#555;
    margin-top:50rpx;
    margin-bottom:20rpx;
  }
  .title-left{
    font-weight:800;
    color:#000;
  }
  .title-right{
    font-size:26rpx;
  }
    /* 2.头部部分 */
  .header{
    display:flex;
    flex-direction:column;
    margin-bottom:40rpx;
  }
  .header image{
    width:100%;
    height:400rpx;
    border-radius:10rpx;
  }
  .header-top{
    font-weight:700;
    margin-top:10rpx;

  }
  .header-bottom{
    font-size:26rpx;
    margin-left:20rpx;
    color:#999;
    margin-top:10rpx;
  }
  /* 3.底部部分 */
  .bottom{
    display:flex;
    flex-wrap:wrap;
    justify-content:space-between;
  
  }
  .bottom-item{
    display:flex;
    flex-direction:column;
    margin-bottom:30rpx;
  }
  .bottom image{
    width:220rpx;
    height:280rpx;
    border-radius:10rpx;
  }
  .bottomItem-top{
    font-size:26rpx;
    margin-top:5rpx;
  }
  .bottomItem-bottom{
    font-size:20rpx;
    color:#999;
    margin-top:5rpx;
  }




